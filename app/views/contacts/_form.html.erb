<%= form_with(model: @contact, local: true) do |form| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
      <ul>
        <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.select :phone_number, options_for_select([["Equal", "equal"], ["Unequal", "unequal"]]), {}, id: 'split_type' %>
  </div>

  <div class="field" id="phone_number_field" style="display: none;">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var splitTypeField = document.getElementById("split_type");
    var phoneNumberField = document.getElementById("phone_number_field");

    function togglePhoneNumberField() {
      phoneNumberField.style.display = (splitTypeField.value === "unequal") ? "block" : "none";
    }

    // Initial check in case the page is reloaded
    togglePhoneNumberField();

    // Add event listener to the select field
    splitTypeField.addEventListener("change", togglePhoneNumberField);
  });
</script>
